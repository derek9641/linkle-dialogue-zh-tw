      - text: 神獸瓦‧娜波力斯
      - control:
          kind: reset_colour
      - text: 的那副身影……
      - control:
          kind: pause
          length: longer
  Npc_oasis003_Ready_006:
    attributes: Npc_oasis003
    contents:
      - control:
          kind: sound
          unknown:
            - 11
            - 0
      - text: 我記得好像……
      - control:
          kind: pause
          length: longer
      - text: "\n叫作……"
      - control:
          kind: set_colour
          colour: red
      - text: 驅魔之劍
